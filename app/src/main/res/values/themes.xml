<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.HayzelOfficeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/hayzel_primary</item>
        <item name="colorPrimaryVariant">@color/hayzel_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/hayzel_accent</item>
        <item name="colorSecondaryVariant">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Tertiary -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/white</item>

        <!-- Surface Colors (Cards, Sheets, Menus) -->
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <item name="colorSurfaceVariant">@color/light_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/light_on_surface_variant</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/bg_light</item>
        <item name="android:colorBackground">@color/bg_light</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/light_on_surface</item>
        <item name="android:textColorSecondary">@color/light_on_surface_variant</item>
        <item name="android:textColorHint">@color/light_on_surface_variant</item>

        <!-- Outline/Borders -->
        <item name="colorOutline">@color/light_outline</item>
        <item name="colorOutlineVariant">@color/light_outline_variant</item>

        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnErrorContainer">@color/on_error_container</item>

        <!-- System Bars -->
        <item name="android:statusBarColor">@color/hayzel_primary_dark</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Component Styles -->
        <item name="cardViewStyle">@style/CardView.Hayzel</item>
        <item name="materialButtonStyle">@style/Button.Hayzel</item>
        <item name="textInputStyle">@style/TextInputLayout.Hayzel</item>
        <item name="chipStyle">@style/Chip.Hayzel</item>

        <!-- Elevation -->
        <item name="android:elevation">0dp</item>
        <item name="elevationOverlayColor">@color/light_elevation_overlay</item>
        <item name="elevationOverlayEnabled">true</item>

        <!-- Corner radius -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Hayzel.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Hayzel.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Hayzel.Large</item>
    </style>

    <style name="Theme.HayzelOfficeApp.WithActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/hayzel_primary</item>
        <item name="colorPrimaryVariant">@color/hayzel_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/hayzel_accent</item>
        <item name="colorSecondaryVariant">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Surface Colors (Cards, Sheets, Menus) -->
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <item name="colorSurfaceVariant">@color/light_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/light_on_surface_variant</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/bg_light</item>
        <item name="android:colorBackground">@color/bg_light</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/light_on_surface</item>
        <item name="android:textColorSecondary">@color/light_on_surface_variant</item>
        <item name="android:textColorHint">@color/light_on_surface_variant</item>

        <!-- Outline/Borders -->
        <item name="colorOutline">@color/light_outline</item>
        <item name="colorOutlineVariant">@color/light_outline_variant</item>

        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnErrorContainer">@color/on_error_container</item>

        <!-- System Bars -->
        <item name="android:statusBarColor">@color/hayzel_primary_dark</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Full Screen Theme -->
    <style name="Theme.HayzelOfficeApp.FullScreen" parent="Theme.HayzelOfficeApp">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.HayzelOfficeApp.Login" parent="Theme.HayzelOfficeApp">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.HayzelOfficeApp.LoginScreen" parent="Theme.HayzelOfficeApp">
        <item name="android:windowBackground">@color/login_dark_bg_primary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
