<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark Theme -->
    <style name="Theme.HayzelOfficeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Brand Colors (Softer in Dark) -->
        <item name="colorPrimary">@color/hayzel_primary_light</item>
        <item name="colorPrimaryVariant">@color/hayzel_primary</item>
        <item name="colorOnPrimary">@color/bg_dark</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/accent_yellow</item>
        <item name="colorSecondaryVariant">#FFB74D</item>
        <item name="colorOnSecondary">@color/bg_dark</item>

        <!-- Tertiary -->
        <item name="colorTertiary">@color/tertiary_container</item>
        <item name="colorOnTertiary">@color/tertiary</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        <item name="colorSurfaceVariant">@color/dark_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/dark_text_secondary</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="android:colorBackground">@color/bg_dark</item>

        <!-- Text Colors - IMPORTANT FIX -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <item name="android:textColorHint">@color/dark_text_hint</item>

        <!-- Outline/Borders -->
        <item name="colorOutline">@color/dark_outline</item>
        <item name="colorOutlineVariant">@color/dark_outline_variant</item>

        <!-- Error -->
        <item name="colorError">#FFB4AB</item>
        <item name="colorOnError">#690005</item>
        <item name="colorErrorContainer">#93000A</item>
        <item name="colorOnErrorContainer">#FFDAD6</item>

        <!-- System Bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:enforceNavigationBarContrast">true</item>

        <!-- Component Styles -->
        <item name="cardViewStyle">@style/CardView.Hayzel.Dark</item>
        <item name="materialButtonStyle">@style/Button.Hayzel.Dark</item>
        <item name="textInputStyle">@style/TextInputLayout.Hayzel.Dark</item>
        <item name="chipStyle">@style/Chip.Hayzel.Dark</item>

        <!-- Elevation -->
        <item name="elevationOverlayColor">@color/dark_elevation_overlay</item>
        <item name="elevationOverlayEnabled">true</item>

        <!-- Same corner radius -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Hayzel.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Hayzel.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Hayzel.Large</item>
    </style>

    <!-- Full Screen Dark Theme -->
    <style name="Theme.HayzelOfficeApp.FullScreen" parent="Theme.HayzelOfficeApp">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>